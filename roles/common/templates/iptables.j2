# {{ ansible_managed }}

{% if inventory_hostname in groups['webservers'] %}
-I INPUT -p tcp --dport 80 -j ACCEPT
{% endif %}
{% if inventory_hostname in groups['dbservers'] %}
-I INPUT -p tcp --dport 3306 -j ACCEPT
{% endif %}
{% if inventory_hostname in groups['appservers'] %}
-I INPUT -p tcp --dport 8000 -j ACCEPT
{% endif %}
{% if inventory_hostname in groups['analytics'] %}
-I INPUT -p tcp --dport 580 -j ACCEPT
{% endif %}

